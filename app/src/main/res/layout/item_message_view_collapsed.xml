<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_message_view_collapsed_sender"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/lato_regular"
                android:gravity="start"
                android:lines="1"
                android:text="CTemplar"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/item_message_view_holder_attachment_image_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_attachment_small"
                app:tint="?android:textColorSecondary" />

            <ImageView
                android:id="@+id/item_message_view_holder_reply_image_view"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:padding="6dp"
                android:src="@drawable/ic_reply_message" />

            <TextView
                android:id="@+id/item_message_view_short_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/lato_regular"
                android:lines="1"
                android:text="Apr 6"
                android:textColor="@color/colorGrey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_message_view_collapsed_folder_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_message_status_blue"
                android:ellipsize="end"
                android:fontFamily="@font/lato_regular"
                android:gravity="center_vertical"
                android:maxWidth="80dp"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="inbox"
                android:textColor="@color/colorWhiteLight"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView android:id="@+id/encrypted_message_lock_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_key"
            app:tint="?android:textColorSecondary" />

        <TextView
            android:id="@+id/item_message_view_collapsed_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_regular"
            android:gravity="start"
            android:lines="1"
            android:text="You now have an inbox that is protected by strong encryption with "
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorDivider" />

</LinearLayout>