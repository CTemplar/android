<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="iconTint">@color/secondaryTextColor</item>
    </style>

    <style name="EditTextCredentialsThemeLight" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/colorWhite50</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="EditTextCredentialsThemeDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue2</item>
        <item name="colorControlHighlight">@color/colorDarkBlue2</item>
    </style>

    <style name="EditTextCredentialsThemeDarkDayNight" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorControlNormal">@color/primaryTextColor</item>
        <item name="colorControlActivated">@color/secondaryTextColor</item>
        <item name="colorControlHighlight">@color/secondaryTextColor</item>
    </style>

    <style name="TextHintAppearanceLight" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TextHintAppearanceDark" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorDarkBlue2</item>
        <item name="android:textColorHint">@color/colorDarkBlue2</item>
    </style>

    <style name="TextHintAppearanceDarkDayNight" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textColorHint">@color/secondaryTextColor</item>
    </style>

    <style name="TextErrorAppearanceDark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogTransparentAnimation" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">60%</item>
    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fragment_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fragment_exit_to_bottom</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/preference_text_color</item>
        <item name="android:textColorSecondary">@color/preference_summary_text_color</item>
        <item name="colorAccent">@color/colorAccentSettings</item>
    </style>

    <style name="CheckBoxLight" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhiteLight</item>
        <item name="colorAccent">@color/colorWhiteLight</item>
    </style>
</resources>