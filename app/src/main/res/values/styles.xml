<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NavigationBarLight" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorDarkBlue2</item>
        <item name="colorPrimaryDark">@color/colorGreyLight2</item>
        <item name="colorAccent">@color/colorOrangeLight</item>
    </style>

    <style name="FabOrange" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorOrangeLight</item>
    </style>

    <style name="ActionBarLight" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorGreyLight</item>
        <item name="colorPrimaryDark">@color/colorGreyLight2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextCredentialsThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorWhite50</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="EditTextCredentialsThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue2</item>
        <item name="colorControlHighlight">@color/colorDarkBlue2</item>
    </style>

    <style name="TextHintAppearanceLight" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="TextHintAppearanceDark" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorDarkBlue2</item>
        <item name="android:textColorHint">@color/colorDarkBlue2</item>
    </style>

    <style name="TextErrorAppearanceDark" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ff0000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/Dialog.Window</item>
    </style>

    <style name="Dialog.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/fragment_enter_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/fragment_exit_to_bottom</item>
    </style>

    <style name="ActionBarLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ActionBarLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceScreen" parent="AppTheme.NoActionBar">
        <item name="android:textColor">@color/preference_text_color</item>
        <item name="colorAccent">@color/colorBlue</item>
    </style>

</resources>