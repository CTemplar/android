<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorOrangeDark2"/>
            <solid android:color="@color/colorOrangeDark2" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorOrangeDark2" />
            <gradient
                android:startColor="@color/colorOrangeDark2"
                android:endColor="@color/colorOrangeLight"
                android:angle="0"/>
        </shape>
    </item>
</selector>