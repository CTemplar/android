<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorOrangeDark2" />
            <solid android:color="@color/colorOrangeDark2" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/disabledTextColor" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/colorOrangeDark2" />
            <gradient android:angle="0" android:endColor="@color/colorOrangeLight" android:startColor="@color/colorOrangeDark2" />
        </shape>
    </item>
</selector>